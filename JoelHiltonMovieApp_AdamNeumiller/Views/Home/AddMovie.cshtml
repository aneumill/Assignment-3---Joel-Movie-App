@{
    ViewBag.Title = "Add a Movie to Joel's Collection.";

}

@model JoelHiltonMovieApp_AdamNeumiller.Models.AddMovieResponse;

<form asp-action="AddMovie" method="post">
    <div>
        <label asp-for="Title" >Movie Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Category">Category</label>
        <input asp-for="Category" />
    </div>
    <div>
        <label asp-for="Director">Director</label>
        <input asp-for="Director" />
    </div>
    <div>
        <label asp-for=" Rating">Rating</label>
        <select asp-for="Rating">
            <option value="G"> G </option>
            <option value="TV-Y">TV-Y </option>
            <option value="PG"> PG </option>
            <option value="TV-PG"> TV-PG </option>
            <option value="PG-13"> PG-13 </option>
            <option value="TV-14"> TV-14 </option>
            <option value="R"> R </option>
            <option value="TV-MA"> TV-MA </option>
            <option value="Not Rated">Not Rated </option>
            <option value="Unrated">Unrated </option>

        </select>

    </div>
    <div>
        <label asp-for="Year">Year</label>
        <input asp-for="Year" />
    </div>
    <div>
        <label asp-for="Edited">Edited</label>
        <input type="checkbox" asp-for="Edited" />
    </div>
    <div>
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" />
    </div>
    <div>
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" />
    </div>
    <button type="submit"> Submit </button>
</form>

<div asp-validation-summary="All"></div>