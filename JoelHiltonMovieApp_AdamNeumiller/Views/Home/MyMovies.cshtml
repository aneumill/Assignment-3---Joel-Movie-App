@{
    ViewBag.Title = "Joel's Collection";
}

@model IEnumerable<Movie>



<!--This section of the code is the view for the movie collection. -->
<div class="text-center" >

    <h2>Joel's Collection</h2>
    <table class="center table text-center table-striped table-dark table-hover"  >
        <thead class="center">
            <tr>
                <th>Movie Title</th>
                <th>Category</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (JoelHiltonMovieApp_AdamNeumiller.Models.Movie x in Model)
            {
                <partial name="MyMoviesSummary" model="x" />
            }

 
        </tbody>
    </table>


</div>
