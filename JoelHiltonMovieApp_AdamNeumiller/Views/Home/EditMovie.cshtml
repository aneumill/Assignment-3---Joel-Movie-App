@{
}


@model JoelHiltonMovieApp_AdamNeumiller.Models.Movie;

<h2> You are editing @Model.Title</h2>

<form asp-action="EditMovie" method="post">
    <div>
        
        <input asp-for="MovieID" type="hidden" value="@Model.MovieID" />
    </div>
    <div>
        <label asp-for="Title" >Movie Title</label>
        <input asp-for="Title" value="@Model.Title"/>
    </div>
    <div>
        <label asp-for="Category">Category</label>
        <input asp-for="Category" />
    </div>
    <div>
        <label asp-for="Director">Director</label>
        <input asp-for="Director" value="@Model.Director" />
    </div>
    <div>
        <label asp-for=" Rating">Rating</label>
        <select asp-for="Rating" value="@Model.Rating">
            <option value="G"> G </option>
            <option value="TV-Y">TV-Y </option>
            <option value="PG"> PG </option>
            <option value="TV-PG"> TV-PG </option>
            <option value="PG-13"> PG-13 </option>
            <option value="TV-14"> TV-14 </option>
            <option value="R"> R </option>
            <option value="TV-MA"> TV-MA </option>
            <option value="Not Rated">Not Rated </option>
            <option value="Unrated">Unrated </option>
        </select>

    </div>
    <div>
        <label asp-for="Year">Year</label>
        <input asp-for="Year" value="@Model.Year" />
    </div>
    <div>
        <label asp-for="Edited">Edited</label>
        <input type="checkbox" asp-for="Edited" value="@Model.Edited" />
    </div>
    <div>
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" value="@Model.LentTo" />
    </div>
    <div>
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" value="@Model.Notes" />
    </div>
    <button type="submit"> Submit </button>
</form>

<div asp-validation-summary="All"></div>